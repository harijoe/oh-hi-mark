{
  "version": "0.2.0",
  "name": "Oh, hi Mark!",
  "manifest_version": 2,
  "description": "Minimalist chrome extension designed to enrich chrome's bookmark with a search functionality and a perfect user experience",
  "browser_action": {
    "default_title": "Oh, hi Mark!",
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "img/icon/icon-saved-128.png"
  },
  "background": {
    "page": "background.html"
  },
  "commands": {
    "toggle-feature-save": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S",
        "windows": "Ctrl+Shift+S",
        "chromeos": "Ctrl+Shift+S",
        "linux": "Ctrl+Shift+S"
      },
      "description": "Saves the current page"
    },
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+O",
        "mac": "Command+Shift+O",
        "windows": "Ctrl+Shift+O",
        "chromeos": "Ctrl+Shift+O",
        "linux": "Ctrl+Shift+O"
      }
    }
  },
  "permissions": [ "management", "tabs", "storage", "<all_urls>", "unlimitedStorage", "identity", "identity.email" ],
  "content_security_policy": "default-src 'self'; script-src 'self'; connect-src https://n6d0avuw04.execute-api.eu-west-1.amazonaws.com; style-src * 'unsafe-inline'; img-src 'self' data:;"
}
